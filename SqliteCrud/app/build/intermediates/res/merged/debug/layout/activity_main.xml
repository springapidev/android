<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_storage_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coderbd.sqlitecrud.MainActivity">

    <Button
        android:text="New"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/button"
        android:onClick="newFile"
        app:layout_constraintLeft_toLeftOf="@+id/activity_storage_demo"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_storage_demo"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Open"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/button2"
        android:onClick="openFile"
        app:layout_constraintLeft_toLeftOf="@+id/activity_storage_demo"
        app:layout_constraintTop_toTopOf="@+id/activity_storage_demo"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_storage_demo" />

    <Button
        android:text="Save"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:id="@+id/button4"
        android:onClick="saveFile"
        app:layout_constraintTop_toTopOf="@+id/activity_storage_demo"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_storage_demo"
        android:layout_marginEnd="16dp" />

    <EditText
        android:layout_width="218dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fileText"
        app:layout_constraintLeft_toLeftOf="@+id/activity_storage_demo"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/activity_storage_demo"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>
